// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Bebe {
  idBebe    String   @id
  nome      String
  dataNasc  String
  pesoNasc  String
  nomeMae   String
  altura    String
  medicos   Medico[]
  maes      Mae[]
}

model Medico {
  idMed      Int      @id
  idBebe     String
  crm        String
  nome       String
  endereco   String
  especialidade String
  telefone   String
  bebe       Bebe     @relation(fields: [idBebe], references: [idBebe])
}

model Mae {
  idMed       Int      @id
  idBebe     String
  nome       String
  endereco   String
  telefone   String
  dataNasc   String
  bebe       Bebe     @relation(fields: [idBebe], references: [idBebe])
}

